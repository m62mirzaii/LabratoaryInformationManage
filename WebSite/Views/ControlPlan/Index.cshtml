@{
    ViewData["Title"] = "نمایش طرح کنترل";
    Layout = "~/Views/Shared/_masterLayout.cshtml";
}


@section Script
    {
    <script src="~/website/ControlPlan.js" asp-append-version="true"></script>
    <link href="~/css/my-style.css" rel="stylesheet" />
    <link href="~/css/controlpanel-style.css" rel="stylesheet" />
    <link href="~/date_picker/PersianDatePicker.min.css" rel="stylesheet" />
    <script src="~/date_picker/PersianDatePicker.min.js"></script>
 }
<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
<input name="controlPlanId" id="controlPlanId" type="hidden" />
<input id="controlPlanId_Selected" type="hidden" />
<input id="controlPlanProcessId_Selected" type="hidden" />
<input type="hidden" id="PersianToday" data-value='@ViewBag.MyDate' />
<div class="row">
    <div class="col-3">
        <div class="card bg-gradient pagerHeader">
            <div class="content table-responsive table-full-width">
                <label style="padding-right : 10px  ; font-size:20px;"> طرح کنترل </label>
            </div>
        </div>
        <div class="card m-0" style="align-items: center; height:950px">
            <div class="container" style="margin-top:15px">
                <div class="row">
                    <div class=" table-responsive" style="width:100%">
                        <table id="tblControlPlan" class="table table-striped table-bordered text-right" style="cursor:pointer;width:100%">
                            <thead class="thead-color">
                                <tr>
                                    <th class="th-color" style="width:120px">نام کارخانه</th>
                                    <th class="th-color" style="width:100px">شماره طرح کنترل </th>
                                    <th class="th-color" style="width:100px"> تاریخ </th>
                                    <th class="th-color"></th>
                                    <th class="th-color" width="5%"> <a id="btnShow_AddControlPlan" style="font-size:20px"> <i class="fa fa-plus-circle" style="color:white"></i> </a> </th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-9">
        <div class="card bg-gradient pagerHeader">
            <div class="content table-responsive table-full-width">
                <label style="padding-right : 10px  ; font-size:20px;"> نمایش جزئیات</label>
            </div>
        </div>

        <div class="card m-0" style="align-items: center; height:950px; width:100%">
            <div class="container" style="margin-top:15px">
                <div class="row">
                    <div class="col-7">
                        <div style="border: 1px solid gray;height:450px">
                            <div class=" table-responsive" style="width:100%">
                                <table id="tblControlPlanPiece" class="table table-striped table-bordered text-right">
                                    <thead style=" background-color: #4c607b; margin-right:15px">
                                        <tr>
                                            <th class="th-color" style="width:150px">شماره قطعه</th>
                                            <th class="th-color" style="width:300px">نام قطعه</th>
                                            <th class="th-color" style="width:200px">کاربرد</th>
                                            <th> <a id="btnNewPiece" title="جدید" style="font-size:20px;cursor: pointer"><i class="fa fa-plus-circle" style="color:white"></i> </a></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-5">
                        <div style="border: 1px solid gray;height:450px">
                            <div class=" table-responsive" style="width:100%">
                                <table id="tblControlPlanProcess" class="table table-striped table-bordered text-right" style="cursor:pointer;width:100%">
                                    <thead style=" background-color: #4c607b;">
                                        <tr>
                                            <th class="th-color" style="width:250px">نام فرآیند </th>
                                            <th class="th-color" style="width:250px">نوع</th>
                                            <th width="5%"> <a id="btnNewProcess" title="جدید" style="font-size:20px"><i class="fa fa-plus-circle" style="color:white"></i></a></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="div_ControlPlanProcessTest" class="row" style="margin-top:15px">
                    <div class=" table-responsive" style="width:100%">
                        <div style="border: 1px solid gray;height:450px">
                            <table id="tblControlPlanProcessTest" class="table table-striped table-bordered text-right" style="width:100%">
                                <thead style=" background-color: #4c607b;">
                                    <tr>
                                        <th class="th-color" style="width:250px">محصول </th>
                                        <th class="th-color" style="width:250px">فرآیند</th>
                                        <th class="th-color" style="width:150px">هزینه</th> 
                                        <th class="th-color" style="width:80px">حداقل</th>
                                        <th class="th-color" style="width:80px">حداکثر</th>
                                        <th class="th-color" style="width:150px">واحد</th>
                                        <th class="th-color" style="width:150px">استاندارد</th>
                                        <th class="th-color" style="width:200px">شرح</th>
                                        <th width="5%"> <a id="btnNewProcessTest" title="جدید" style="font-size:20px;cursor: pointer"><i class="fa fa-plus-circle" style="color:white"></i></a></th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

