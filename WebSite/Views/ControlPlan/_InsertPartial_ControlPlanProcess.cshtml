@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model Models.ViewModel.ControlPlanProcessViewModel

<script>

    $("#tblProcess").DataTable({
        'sDom': 't',
        "ajax": {
            "url": "Process/GetProcesses",
            "type": "POST",
            "datatype": "json"
        },
        "columns": [
            {
                "render": function (data, type, row) { return '<input type="checkbox" class="select-checkbox" name="check" value="' + row.id + '">'; }
            },
            { "data": "processName" },
            { "data": "processTypeName" }, 
        ]
    });

</script>

<div class="row alertBox hidden" id="alertBox">
    <span role="alert" class="alert"></span>
</div>

<div class="container">
    <form asp-action="AddControlPlanProcess" asp-controller="ControlPlan"> 
        <div class="form-group">
            <input asp-for="@Model.ControlPlanId" type="hidden" readonly="readonly" />
        </div>
        <div class="row" style="padding-bottom:20px">
            <div class="col-12">
                <table id="tblProcess">
                    <thead style=" background-color: #4c607b;">
                        <tr>
                            <th>نام فرآیند </th>
                            <th>نوع</th>
                            <th></th> 
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div> 
        <div class="row">
            <div class="col-6"></div>
            <div class="col-6">
                <input type="submit" value="ذخیره" asp-action="AddControlPlanProcess" id="submit" class="btn btn-success" />
                <input type="submit" value="انصراف" asp-action="Close" class="btn btn-danger" />
            </div>
        </div>
    </form>
</div>