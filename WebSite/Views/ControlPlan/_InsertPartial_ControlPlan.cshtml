@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model Models.ViewModel.ControlPlanViewModel

<link href="~/date_picker/PersianDatePicker.min.css" rel="stylesheet" />
<script src="~/date_picker/PersianDatePicker.min.js"></script>

<script>
    $("#companyList").select2({
        dropdownParent: $("#MyPopup .modal-body"),
        allowClear: true,
        minimumInputLength: 0,
        ajax: {
            cache: false,
            dataType: "json",
            type: "Post",
            url: "Company/GetCompanys",
            data: '{}',
            processResults: function (data) {
                return {
                    results: $.map(data, function (item) {
                        return {
                            text: item.name,
                            id: item.id
                        }
                    })
                };
            }
        },
    }).on('change', function (e) {
        var getID = $(this).select2('data');
        $("#companyId").val(getID[0]['id']);
    });
</script>

<div class="row alertBox hidden" id="alertBox">
    <span role="alert" class="alert"></span>
</div>

<div class="">
    <form asp-action="AddControlPlan" asp-controller="ControlPlan">
 
        <div class="row" style="padding-bottom:20px">
            <div class="col-8">
                <div class="form-group">
                    <label asp-for="CompanyId" class="control-label">کارخانه</label>
                    <select class="form-control" id="companyList" name="companyList" asp-for="CompanyId"
                            asp-items="@(new SelectList(string.Empty, "Id", "Name"))" style="width:300px"></select>
                    <input asp-for="CompanyId" id="companyId" class="form-control" type="hidden" readonly="readonly" />
                </div>
            </div>
        </div>  
        <div class="row">
            <div class="col-8" style="padding-bottom:20px">
                <div class="form-group">
                    <label asp-for="PlanNumber" class="control-label">شماره طرح کنترل</label>
                    <input asp-for="PlanNumber" id="txt_PlanNumber" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-8" style="padding-bottom:20px">
                <div class="form-group" >
                    <label asp-for="CreateDate" class="control-label">  تاریخ</label>
                    <input asp-for="CreateDate" class="form-control" id="txt_CreateDate" onclick="PersianDatePicker.Show(this, '@ViewBag.MyDate')" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6"></div>
            <div class="col-6">
                <input type="submit" value="ذخیره" asp-action="AddControlPlan" id="AddControlPlan" class="btn btn-success" />
                <input type="button" value="انصراف" id="closeControlPlanModal" class="btn btn-danger" />
            </div>
        </div>
    </form>
</div>