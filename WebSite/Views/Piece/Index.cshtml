@model IEnumerable<Models.ViewModel.PieceViewModel>

@{
    ViewData["Title"] = "نمایش قطعات";
    Layout = "~/Views/Shared/_masterLayout.cshtml";
}

@section Script
    {
    <script src="~/website/Piece.js" asp-append-version="true"></script>
    <link href="~/css/my-style.css" rel="stylesheet" />
}
<input id="pieceId_Selected" class="form-control" type="hidden" />
<div class="card bg-gradient pagerHeader">
    <div class="content table-responsive table-full-width">
        <label style="padding-right : 10px  ; font-size:20px;"> قطعات    </label>
    </div>
</div>
<div class="card m-0" style="align-items: center">
    <div class="container" style="margin-top:15px;margin-bottom:15px">
        <table id="tblPiece" class="table table-striped table-bordered text-right">
            <thead class="thead-color">
                <tr>
                    <th class="th-color" style="width:150px">کد </th>
                    <th class="th-color" style="width:450px">نام قطعه</th>
                    <th class="th-color">نام کاربرد</th>
                    <th class="th-color">وضعیت</th>
                    <th class="th-color"></th>
                    <th class="th-color">
                        <a style="font-size:20px;cursor: pointer;" onclick="ShowPopUp_Insert()"> <i class="fa fa-plus-circle" style="color:white"></i> </a>
                    </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Popup -->
<div id="insertPieceModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document" style="max-width: 20%">
        <div class="modal-content modalStyle">
            <div class="modal-header">
                <label>ثبت / ویرایش اطلاعات</label>
                <img src="~/img/modal-header.png" />
            </div>
            <div id="insertPieceModal_body" class="modal-body">
                <div class="row alertBox hidden" id="alertBox">
                    <span role="alert" class="alert"></span>
                </div>

                <div class="row" style="padding-bottom:20px">
                    <div class="col-6">
                        <div class="form-group">
                            <label class="control-label"> کد قطعه</label>
                            <span style="color:red">*</span>
                            <input id="txt_Code" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row" style="padding-bottom:20px">
                    <div class="col-10">
                        <div class="form-group">
                            <label class="control-label">نام قطعه</label>
                            <span style="color:red">*</span>
                            <input id="txt_PieceName" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row" style="padding-bottom:20px">
                    <div class="col-10">
                        <div class="form-group">
                            <label class="control-label">کاربرد قطعه</label>
                            <select class="form-control" id="pieceUsage" clientidmode="Static" style="width:300px"></select>
                            <input id="pieceUsageId" class="form-control" type="hidden" readonly="readonly" />
                        </div>
                    </div>
                </div>
                <div class="row" style="padding-bottom:20px">
                    <div class="col-8">
                        <div class="form-switch">
                            <label class="control-label">وضعیت</label>
                            <input type="checkbox" id="chk_IsActive" class="form-check-input" style="font-size:18px;width:80px" checked="checked">

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6"></div>
                    <div class="col-6">
                        <input type="submit" value="ذخیره" onclick="InsertPiece()" style="width:120px" class="btn btn-sm btn-success" />
                        <input type="button" value="انصراف" onclick="ClosePopUp_Insert()" class="btn btn-sm btn-danger" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Popup -->
<div id="updatePieceModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document" style="max-width: 20%">
        <div class="modal-content modalStyle">
            <div class="modal-header">
                <label>   ویرایش اطلاعات</label>
                <img src="~/img/modal-header.png" />
            </div>
            <div id="updateTestRequestModal_body" class="modal-body">
                <div class="row alertBox hidden" id="alertBox">
                    <span role="alert" class="alert"></span>
                </div>
                <div class="row" style="padding-bottom:20px">
                    <div class="col-6">
                        <div class="form-group">
                            <label class="control-label"> کد قطعه</label>
                            <span style="color:red">*</span>
                            <input id="txt_Code_update" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row" style="padding-bottom:20px">
                    <div class="col-10">
                        <div class="form-group">
                            <label class="control-label">نام قطعه</label>
                            <span style="color:red">*</span>
                            <input id="txt_PieceName_update" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row" style="padding-bottom:20px">
                    <div class="col-10">
                        <div class="form-group">
                            <label class="control-label">کاربرد قطعه</label>
                            <select class="form-control" id="pieceUsage_update" clientidmode="Static" style="width:300px"></select>
                            <input id="pieceUsageId_update" class="form-control" type="hidden" readonly="readonly" />
                        </div>
                    </div>
                </div>
                <div class="row" style="padding-bottom:20px">
                    <div class="col-8">
                        <div class="form-switch">
                            <label class="control-label">وضعیت</label>
                            <input type="checkbox" id="chk_IsActive_update" class="form-check-input" style="font-size:18px;width:80px" checked="checked">

                        </div>
                    </div>
                </div>
                <div class="row" style="padding-bottom:20px">
                    <div class="col-6"></div>
                    <div class="col-6" style="margin-top:19px">
                        <input type="submit" value="ویرایش" onclick="UpdatePiece()" style="width:90px" class="btn btn-sm btn-primary" />
                        <input type="submit" value="انصراف" onclick="ClosePopUp_Update()" class="btn btn-sm btn-danger" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
