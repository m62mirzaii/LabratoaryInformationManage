@model IEnumerable<Models.ViewModel.UserViewModel> 
@{
    ViewData["Title"] = "تعریف دسترسی";
    Layout = "~/Views/Shared/_masterLayout.cshtml";
}

@section Script{
    <script src='~/website/SystemUser.js' asp-append-version="true"></script>
    <link href="~/css/my-style.css" rel="stylesheet" />
}

<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">

<input id="userId_Selected" type="hidden" />

<div class="card bg-gradient pagerHeader">
    <div class="content table-responsive table-full-width">
        <label style="padding-right : 10px  ; font-size:20px;">  دسترسی کاربران </label>
    </div>
</div>
<div class="card m-0" style="align-items: center; height:950px">
    <div class="container" style="margin-top:15px">

        <div class="row" style="padding-bottom:20px">
            <div class="col-10">
                <div class="form-group">
                    <label class="control-label">کاربر </label>
                    <select class="form-control" id="userLists" name="userLists" style="width:300px"></select>
                    <input id="userId" class="form-control" type="hidden" readonly="readonly" />
                </div>
            </div>
        </div>

        <table id="tblSystems" class="table table-striped table-bordered table-responsive">
            <thead class="thead-color">
                <tr>
                    <th class="th-color" style="width:300px">نام سیستم </th>
                    <th class="th-color" width="5%"></th>
                    <th class="th-color" width="5%"> <a id="btnShowInsertPartial" style="font-size:20px;cursor: pointer;"> <i class="fa fa-plus-circle" style="color:white"></i> </a> </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>


<!-- Modal Popup -->
<div id="insertModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document" style="max-width: 30%">
        <div class="modal-content modalStyle">
            <div class="modal-header">
                <label>ثبت / ویرایش اطلاعات</label>
                <img src="~/img/modal-header.png" />
            </div>
            <div id="insertModal_body" class="modal-body">
                <div class="row alertBox hidden" id="alertBox">
                    <span role="alert" class="alert"></span>
                </div>
                @* <div class="row" style="padding-bottom:20px">
                <div class="col-6">
                <div class="form-group">
                <label class="control-label">کاربر </label>
                <select class="form-control" id="userLists" name="userLists" style="width:300px"></select>
                <input id="userId" class="form-control" type="hidden" readonly="readonly" />
                </div>
                </div>
                </div>*@

                <div class="row" style="padding-bottom:20px">
                    <div class=" table-responsive" style="width:100%">
                        <div style="height:700px">
                            <table id="tblSystemForInsert" class="table table-striped table-bordered text-right" style="width:100%">
                                <thead class="thead-color">
                                    <tr>
                                        <td class="th-color"></td>
                                        <th class="th-color" style="width:600px">نام سیستم </th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6"></div>
                    <div class="col-6">
                        <input type="submit" value="ذخیره" id="btnAddSystemUser" style="width:120px" class="btn btn-sm btn-success" />
                        <input type="submit" value="انصراف" id="btncloseModal" class="btn btn-sm btn-danger" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal Popup -->
<div id="updateModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document" style="max-width: 30%">
        <div class="modal-content modalStyle">
            <div class="modal-header">
                <label>ثبت / ویرایش اطلاعات</label>
                <img src="~/img/modal-header.png" />
            </div>
            <div id="updateModal_body" class="modal-body">
                <div class="row alertBox hidden" id="alertBox">
                    <span role="alert" class="alert"></span>
                </div>

                <div class="row" style="padding-bottom:20px">
                    <div class=" table-responsive" style="width:100%">
                        <table id="tblSystemForUpdate" class="table table-striped table-bordered text-right" style="width:100%">
                            <thead class="thead-color" style="width:100%">
                                <tr>
                                    <td class="th-color"></td>
                                    <th class="th-color" style="width:600px">نام سیستم </th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6"></div>
                    <div class="col-6">
                        <input type="submit" value="ویرایش" id="btnUpdateSystemUser" style="width:120px" class="btn btn-sm btn-primary" />
                        <input type="submit" value="انصراف" id="btncloseUpdateModal" class="btn btn-sm btn-danger" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 