@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model Models.ViewModel.TestViewModel

<link href="~/date_picker/PersianDatePicker.min.css" rel="stylesheet" />
<script src="~/date_picker/PersianDatePicker.min.js"></script>

<script>
    $("#processList").select2({
        dropdownParent: $(".modal-body"),
        allowClear: true,
        minimumInputLength: 0,
        ajax: {
            cache: false,
            dataType: "json",
            type: "Post",
            url: "Process/GetAllProcess",
            data: '{}',
            processResults: function (data) {
                return {
                    results: $.map(data, function (item) {
                        return {
                            text: item.processName,
                            id: item.id
                        }
                    })
                };
            }
        },
    }).on('change', function (e) {
        var getID = $(this).select2('data');
        $("#ProcessId").val(getID[0]['id']);
    });

</script>

<div class="row alertBox hidden" id="alertBox">
    <span role="alert" class="alert"></span>
</div> 

<div class="container">
    <form asp-action="UpdateTest" asp-controller="Test">
        <div class="form-group">
            <input asp-for="Id" type="hidden" readonly="readonly" />
        </div>
        <div class="row" style="padding-bottom:20px">
            <div class="col-8">
                <div class="form-group">
                    <label asp-for="TestName" class="control-label"> نام آزمایش </label>
                    <input asp-for="TestName" id="txt_TestName" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row" style="padding-bottom:20px">
            <div class="col-8">
                <div class="form-group">
                    <label asp-for="ProcessId" class="control-label">نام فرآیند</label>
                    <select class="form-control" id="processList" name="definitionList" asp-for="ProcessId"
                            asp-items="@(new SelectList(string.Empty, "Id", "ProcessName"))" style="width:300px"></select>
                    <input asp-for="ProcessId" id="ProcessId" class="form-control" type="hidden" readonly="readonly" />
                </div>
            </div>
        </div>
        <div class="row" style="padding-bottom:20px">
            <div class="col-8">
                <div class="form-group">
                    <label asp-for="Amount" class="control-label">هزینه</label>
                    <input asp-for="Amount" id="txt_Amount" type="number" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row" style="padding-bottom:20px">
            <div class="col-8">
                <div class="form-group">
                    <label asp-for="FromDate" class="control-label">از تاریخ</label>
                    <input asp-for="FromDate" class="form-control" id="txt_FromDate" onclick="PersianDatePicker.Show(this, '@ViewBag.MyDate')" />

                </div>
            </div>
        </div>
        <div class="row" style="padding-bottom:20px">
            <div class="col-8">
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label">تا تاریخ</label>
                    <input asp-for="EndDate" class="form-control" id="txt_EndDate" onclick="PersianDatePicker.Show(this, '@ViewBag.MyDate')" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-8"></div>
            <div class="col-4">
                <input type="submit" value="ویرایش" asp-action="UpdateTest" id="submit" class="btn btn-warning btn-sm" />
                <input type="submit" value="خروج" asp-action="Close" class="btn btn-danger btn-sm" />
            </div>
        </div>
    </form>
</div>