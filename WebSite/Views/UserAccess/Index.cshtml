@{
    ViewData["Title"] = "تعریف کاربران";
    Layout = "~/Views/Shared/_masterLayout.cshtml";
}

@section Script{
    <script src='~/website/UserAccess.js' asp-append-version="true"></script>
    <link href="~/css/my-style.css" rel="stylesheet" />
}

<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">

<input id="userId_Selected" type="hidden" />
<div class="card bg-gradient pagerHeader">
    <div class="content table-responsive table-full-width">
        <label style="padding-right : 10px  ; font-size:20px;">  دسترسی کاربران </label>
    </div>
</div>
<div class="card m-0" style="align-items: center; height:950px">
    <div class="container" style="margin-top:15px">
        <div class="row" style="padding-bottom:20px;">
            <div class="col-9">
                <div class="form-group">
                    <label class="control-label">کاربر</label>
                    <span style="color:red">*</span>
                    <select class="form-control" id="drpUser" name="drpUser" style="width:430px"></select>
                    <input id="userId_Selected" class="form-control" type="hidden" />
                </div>
            </div>
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="نمایش" onclick="ShowUserAccess()" style="margin-top:18px; width:120px" />
            </div>
        </div>

        <div class="row" style="padding-bottom:20px;">
            <div class="col-12">
                <div class="table-responsive">
                    <table id="tblSystems" class="table table-striped table-bordered table-responsive">
                        <thead class="thead-color">
                            <tr>
                                <th class="th-color" style="width:500px">نام  </th>
                                <th class="th-color"> <a onclick="ShowPopUp_Insert()" style="font-size:20px;cursor: pointer;"> <i class="fa fa-plus-circle" style="color:white"></i> </a></th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Popup -->
<div id="insertModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document" style="max-width: 30%">
        <div class="modal-content modalStyle">
            <div class="modal-header">
                <label>ثبت / ویرایش اطلاعات</label>
                <img src="~/img/modal-header.png" />
            </div>
            <div id="insertModal_body" class="modal-body">
                <div class="row alertBox hidden" id="alertBox">
                    <span role="alert" class="alert"></span>
                </div>

                <div class="table-responsive">
                    <table id="tblSystemForInsert" class="table table-striped table-bordered table-responsive" style="500px">
                        <thead class="thead-color">
                            <tr>
                                <th class="th-color">  </th>
                                <th class="th-color" style="width:500px">نام  </th> 
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>

                <div class="row">
                    <div class="col-6"></div>
                    <div class="col-6">
                        <button onclick="InsertSystemUser()" class="btn btn-sm btn-success">ذخیره</button>
                        <button onclick="ClosePopUp()" class="btn btn-sm btn-danger"> انصراف</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
